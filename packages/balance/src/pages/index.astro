---
import Layout from "../layouts/layout.astro";
import activities from "../activities.json";
import { PlotAreaChart } from "../components/plotarea-chart";
import { PolylineMap } from "../components/polyline-map";
---

<Layout title="Welcome to Astro.">
  <div class="flex gap-4 flex-wrap">
    {
      activities.map((activity) => (
        <div class="bg-gray-100 rounded-lg shadow-md">
          {activity.hasPolyline ? (
            <PolylineMap mesgs={activity.mesgs} client:load />
          ) : (
            <PlotAreaChart mesgs={activity.mesgs} client:load />
          )}
        </div>
      ))
    }
  </div>
</Layout>
