---
import activities from "../activities.json";

interface Params {
  id: number;
}

export function getStaticPaths() {
  return activities.map((a) => ({ params: { id: a.activityId } }));
}

const { id } = Astro.params as Params;
---

<div>
  <!--
    if 有记录到 gps
      地图 + 折线图（联动）
    else 没有记录到 gps
      最近 7 天日历图 + 折线图
    
    一些统计数据
  -->
  {id}
</div>
